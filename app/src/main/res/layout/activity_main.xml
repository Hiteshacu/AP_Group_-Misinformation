<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permissions_required"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Notification Permission -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/permission_card_background">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notification_permission"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNotificationStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disabled"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable" />

        </LinearLayout>

        <!-- Accessibility Permission -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/permission_card_background">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accessibility_permission"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAccessibilityStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disabled"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccessibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable" />

        </LinearLayout>

        <!-- Overlay Permission -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@drawable/permission_card_background">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overlay_permission"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOverlayStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disabled"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable" />

        </LinearLayout>

        <!-- Status Message -->
        <TextView
            android:id="@+id/tvStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_all_permissions"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="@drawable/status_background"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Start/Stop Monitoring Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartMonitoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_monitoring"
            android:textSize="16sp"
            android:padding="16dp"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.ElevatedButton" />

        <!-- Debug Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDebug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug Tools"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Steganography Detector Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSteganography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steganography Detector"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.Button.ElevatedButton" />

        <!-- Monitoring Status Card -->
        <LinearLayout
            android:id="@+id/monitoringStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/monitoring_status_background"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitoring_status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvMonitoringStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monitoring_active"
                android:textSize="14sp"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/tvMessagesChecked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/messages_checked"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
