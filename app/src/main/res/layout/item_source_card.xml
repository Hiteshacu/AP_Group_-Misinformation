<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="#40FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Source Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Source Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                android:tint="#666666"
                android:contentDescription="Source" />

            <!-- Source Title -->
            <TextView
                android:id="@+id/tvSourceTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Source Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Credibility Badge -->
            <TextView
                android:id="@+id/tvCredibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ HIGH"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/badge_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Source Snippet -->
        <TextView
            android:id="@+id/tvSourceSnippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a snippet from the source showing relevant information..."
            android:textSize="13sp"
            android:textColor="#555555"
            android:lineSpacingExtra="2dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- URL and Open Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSourceUrl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="example.com"
                android:textSize="11sp"
                android:textColor="#999999"
                android:maxLines="1"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btnOpenSource"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Open →"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:backgroundTint="#2196F3" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
