<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:elevation="12dp"
    android:orientation="vertical"
    android:padding="20dp">

        <!-- Warning Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                android:tint="#FFFFFF"
                android:contentDescription="Warning" />

            <TextView
                android:id="@+id/tvAlertTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš ï¸ MISINFORMATION"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:alpha="0.3"
            android:layout_marginBottom="12dp" />

        <!-- Original Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message:"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:alpha="0.7"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAlertMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="#33FFFFFF"
            android:padding="10dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Classification and Confidence in one row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvAlertLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FALSE"
                android:textColor="#FF5252"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAlertConfidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95%"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Explanation -->
        <TextView
            android:id="@+id/tvAlertExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:lineSpacingExtra="2dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Sources (collapsed) -->
        <TextView
            android:id="@+id/tvAlertSources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:alpha="0.8"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnAlertDetail"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ðŸ” Detail"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:backgroundTint="#4CAF50"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAlertDismiss"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Dismiss"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAlertGotIt"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Got It!"
                android:textColor="#000000"
                android:textSize="13sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>

</LinearLayout>
