<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debug Tools"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnTestAPIs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ§ª Test Both APIs (Diagnostic)"
        android:textStyle="bold"
        android:backgroundTint="#FF5722"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnTestGemini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Gemini API"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCheckCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Cache"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnTestMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Full Flow (2+2=5)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnTestBadge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Badge Display"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSimulateRumor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simulate Rumor (Yellow Badge)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnClearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ—‘ï¸ Clear Cache"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvDebugOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="monospace" />

    </ScrollView>

</LinearLayout>
